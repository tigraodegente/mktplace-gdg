{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@mktplace/shared-types": ["./packages/shared-types/src/index.ts"],
      "@mktplace/ui": ["./packages/ui/src/index.ts"],
      "@mktplace/utils": ["./packages/utils/src/index.ts"],
      "@mktplace/shared-config": ["./packages/shared-config/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".svelte-kit"]
} 